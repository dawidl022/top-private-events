<%= form_with model: @event, local: true do |f| %>
  <%= render 'devise/shared/error_messages', resource: @event %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :start_time %>
    <%= f.datetime_field :start_time %>
  </div>

  <div class="field">
    <%= f.label :end_time %>
    <%= f.datetime_field :end_time %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :private, "Make event private (invitation only)" %>
    <%= f.check_box :private %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
